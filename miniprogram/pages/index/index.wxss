/**index.wxss**/
page{
  height:80%;
}

.top-image{
  width: 100%;
  height:340rpx;
}

.profile-image{
  overflow: hidden;
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
}

.bottom-image{
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 230rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.start{
  font-size: 22px;
  margin: 60px;
  color:rgba(68, 2, 2, 0.65);
  border: 2px solid rgba(68, 2, 2, 0.65);
  border-radius: 3px;
}

.usermotto {
  margin-top: 100rpx;
}